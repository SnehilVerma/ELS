<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.personal1">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="38dp"
        android:text="TextView"
        android:textSize="20dp"
        tools:text="Gender" />

    <EditText
        android:id="@+id/gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:hint="M/F/TG"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginTop="26dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/gen"
        android:layout_alignStart="@+id/textView7">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Religion"
            android:textSize="17dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:visibility="invisible"
        android:id="@+id/caslin"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:text="Caste"
            android:textSize="17dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/caste"></Spinner>
    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Mobile No."
        android:textSize="20dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <EditText
        android:id="@+id/mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/caslin"
        android:layout_alignTop="@+id/textView11"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID"
        android:textSize="20dp"
        android:layout_below="@+id/mob"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="33dp"
        android:id="@+id/textView12" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mob"
        android:layout_alignTop="@+id/textView12"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/textView12">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source of \nIncome"
            android:textSize="18dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soi">
        </Spinner>
    </LinearLayout>
</RelativeLayout>
