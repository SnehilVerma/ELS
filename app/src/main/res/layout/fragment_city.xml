<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/bgcolor"
    android:layout_margin="5dp"
    card_view:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where do you currently live?"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginBottom="50dp"
            android:textColor="@color/textHeadingColor"
            android:textSize="20dp"
            android:textStyle="bold"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >


                <ImageView
                    android:id="@+id/mumbai"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:padding="5dp"
                    android:src="@drawable/mumbai"/>



                <ImageView
                    android:id="@+id/delhi"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_weight="1"

                    android:padding="5dp"
                    android:clickable="true"
                    android:src="@drawable/newdelhi"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/others"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:padding="5dp"
                android:clickable="true"
                android:src="@drawable/othercities"/>



        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>