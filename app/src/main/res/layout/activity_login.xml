<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_activity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login/Signup"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:id="@+id/textView4" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:layout_marginBottom="29dp"
            android:layout_above="@+id/pass"
            android:layout_alignStart="@+id/pass" />



        <EditText
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            android:hint="*******"

            android:layout_marginBottom="57dp"
            android:layout_above="@+id/signin"
            android:layout_centerHorizontal="true" />



        <Button
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView6"
            android:layout_marginBottom="54dp"
            android:layout_marginStart="28dp"
            android:text="SignIn" />

        <Button
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="47dp"
            android:text="First Time?"
            android:layout_alignBaseline="@+id/signin"
            android:layout_alignBottom="@+id/signin"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            card_view:srcCompat="@drawable/log" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pass"
            android:layout_alignStart="@+id/imageView7"
            card_view:srcCompat="@drawable/password"
            android:layout_alignEnd="@+id/imageView7"
            android:layout_alignTop="@+id/pass" />

    </RelativeLayout>
</android.support.v7.widget.CardView>