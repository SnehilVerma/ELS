<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="10dp"
    tools:context="Fragments.CoAPP">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="Enter the details of your Co-Applicant"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="43dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Name of the person"
            android:inputType="textPersonName"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name"
            android:layout_alignStart="@+id/textView3"
            card_view:srcCompat="@drawable/person"
            android:layout_alignTop="@+id/name" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:hint="Contact Details"
            android:inputType="number"
            android:layout_alignEnd="@+id/name"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phone"
            android:layout_toStartOf="@+id/phone"
            card_view:srcCompat="@drawable/phone"
            android:layout_alignTop="@+id/phone" />

        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/phone"
            android:layout_below="@+id/phone"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/imageView3"
            android:ems="10"
            android:hint="Age"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/age"
            android:layout_alignStart="@+id/imageView3"
            card_view:srcCompat="@drawable/age"
            android:layout_alignTop="@+id/age"
            android:layout_toStartOf="@+id/age" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
