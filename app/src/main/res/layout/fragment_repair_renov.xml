<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"


                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Repair/Renovation of own house/flat"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Cost of Renovation"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:hint="Enter cost"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Square ft. area to Renovate"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:hint="Enter area"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Rate per sq. ft."
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:hint="Enter rate"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>
