<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"


                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">





    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layer1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Occupany certificate issued?"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>

        </RadioGroup>

    </LinearLayout>


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layer1"
        android:id="@id/layer2"
        android:layout_marginTop="10dp"
        android:maxLength="40"
        android:enabled="false"
        android:hint="Occupancy certificate issued date"
        />


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layer2"
        android:id="@id/layer3"
        android:layout_marginTop="10dp"
        android:maxLength="40"
        android:enabled="false"
        android:hint="Occupancy letter issuing authority"
        />


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layer3"
        android:id="@id/layer4"
        android:layout_marginTop="10dp"
        android:maxLength="40"
        android:enabled="false"
        android:hint="Occupancy letter reference number"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layer5"
        android:layout_below="@id/layer4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Society/RWA creation status"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>

        </RadioGroup>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layer5"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/l5"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:lines="6"
            android:layout_height="wrap_content"
            android:text="I hereby authorize the Bank and its representatives to call me, email me or SMS me with reference to my loan application. This consent will supersede any registration for any Do Not Call (DNC) / National Do Not Call (NDNC). I am aware that credit approval is at the sole discretion of the bank. *"/>



    </LinearLayout>











</RelativeLayout>