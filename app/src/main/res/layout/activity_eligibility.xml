<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.design.widget.AppBarLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="ELS"
        app:titleTextColor="#ffffff"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

</android.support.design.widget.AppBarLayout>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#e0f2f1"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/im1"
            android:src="@drawable/congratulations"
            android:layout_alignParentTop="true"/>




        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@android:color/background_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/im1"
            android:text="Elgible Loan Amount"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textView"
            android:id="@+id/ll1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textStyle="bold"
                android:textSize="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60000"
            android:textStyle="bold"
            android:textSize="26dp"
            android:id="@+id/eligible"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter following details:"
            android:layout_below="@+id/ll1"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:id="@+id/tv2"
            android:gravity="center"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:id="@+id/tw1">

        <EditText
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:id="@+id/name"
            android:maxLength="50"
            android:layout_gravity="center"
            android:hint="Name"
            android:singleLine="true"
            android:imeOptions="actionNext" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw1"
            android:id="@+id/tw2">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:id="@+id/mob"
            android:layout_gravity="center"
            android:digits="0123456789"
            android:inputType="number"
            android:maxLength="10"
            android:hint="Mobie No."
            android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw2"
            android:id="@+id/tw3">

        <EditText
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mob"
            android:layout_gravity="center"
            android:id="@+id/email"
            android:hint="Email id"
            android:singleLine="true"
            android:imeOptions="actionDone"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:text="@string/buttonsubmit"
            android:id="@+id/submit"
            android:background="@drawable/button"
            android:layout_below="@+id/tw3"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
    </LinearLayout>