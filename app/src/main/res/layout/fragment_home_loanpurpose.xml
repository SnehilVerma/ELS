<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    card_view:cardElevation="4dp"
    app:cardBackgroundColor="@color/bgcolor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/purpose_root"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purpose of Loan"
            android:textSize="20dp"
            android:textColor="@color/textHeadingColor"
            android:textAllCaps="true"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

            <ImageView
                android:id="@+id/ib1"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/newproperty"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:textColor="#ffffff" />
                <ImageView
                    android:id="@+id/ib2"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/repair"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:textColor="#ffffff" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Purchase Identified Property"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="renovate/repair flat"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"/>
</LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
            <ImageView
                android:id="@+id/ib3"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/construction"
                android:clickable="true"
                android:textColor="#ffffff"
                android:layout_marginBottom="5dp"/>
                <ImageView
                    android:id="@+id/ib4"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv2"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/transfer"
                    android:clickable="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="#ffffff" />


                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Construction of House"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Transfer Existing Loan"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimary" />
                </LinearLayout>
        </LinearLayout>
</ScrollView>
    </LinearLayout>
</android.support.v7.widget.CardView>